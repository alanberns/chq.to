<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Inicia sesión</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(url: login_path) do |form| %>
      <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag 'Iniciar sesión', class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
  <div> No tenés una cuenta?
    <%= link_to 'Crear usuario', new_user_path %>
  </div>
</div>

