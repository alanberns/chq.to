<%= form_for(:link, method: 'Patch', url:"/links/#{link.id}") do |form| %>
    <% if link.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>
  
        <ul>
          <% link.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= form.label :url, style: "display: block" %>
      <%= form.text_field :url %>
    </div>
  
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
  
    <% if link.type == "Temporal" %>
      <div>
        <%= form.label :expires_at, style: "display: block" %>
        <%= form.datetime_field :expires_at %>
      </div>
    <% end %>
  
    <% if link.type == "Private" %>
      <div>
        <%= form.label :password, style: "display: block" %>
        <%= form.text_field :password %>
      </div>
    <% end %>
  
    <% if link.type == "Ephemeral" %>
      <div>
        <%= form.label :remaining_accesses, style: "display: block" %>
        <%= form.number_field :remaining_accesses, :disabled => true , :value => 1%>
      </div>
    <% end %>
  
    <div>
      <%= form.submit "Update link" %>
    </div>
  <% end %>