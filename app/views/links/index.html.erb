<div>
  <h1>Links</h1>
</div>

<div id="links">
  <% if @links.present? %>
    <table class="table table-hover"">
      <thead>
        <tr>
          <th>Link destino</th>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @links.each do |link| %>
          <tr>
            <td><%=link.url%></td>
            <td><%=link.name%></td>
            <td>
              <div class="d-grid gap-2 d-md-block d-md-flex justify-content-md-center p-2">
                <%= button_to "Show this link", link_path(link.id), method: :get, :class=>"btn btn-light"%>
                <div class="dropdown">
                  <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Show statistics
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Lista de accesos",show_detail_stats_path(link.id), :class=>"dropdown-item"%></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to "Accesos por día",show_day_stats_path(link.id), :class=>"dropdown-item"%></li>
                  </ul>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="p-3">
      <%= paginate @links %>
    </div>
  <% else %>
    <span> No tenés links creados </span>
  <% end %>
</div>
