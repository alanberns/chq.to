<h1>Links</h1>

<div id="links">
  <% if @links %>
    <table class="">
      <tr>
        <th>Link destino</th>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
      <% @links.each do |link| %>
        <tr>
          <td><%=link.url%></td>
          <td><%=link.name%></td>
          <td><%= link_to "Show this link", link %></td>
        </tr>
      <% end %>
    </table>
    <%= paginate @links %>
  <% else %>
    <span> No ten√©s links creados </span>
  <% end %>
</div>

<%= link_to "New link", new_link_path %>